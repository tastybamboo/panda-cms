<%= render Panda::Core::Admin::ContainerComponent.new do |component| %>
  <% component.with_heading_slot(text: "Add Form", level: 1) %>

  <%= panda_cms_form_with model: form, url: admin_cms_forms_path, method: :post, id: "form-form" do |f| %>
    <%= render Panda::Core::Admin::FormErrorComponent.new(model: form) %>

    <%= f.section_heading "Form Settings" %>

    <div class="space-y-4">
      <%= f.text_field :name, placeholder: "e.g., Contact Form" %>
      <%= f.text_area :description, rows: 2, meta: "Optional description for admin reference" %>
      <%= f.text_field :completion_path, placeholder: "/thank-you", meta: "Path to redirect after submission" %>
    </div>

    <div class="flex justify-end gap-x-3 border-t border-gray-200 mt-6 pt-4">
      <button type="submit" class="inline-flex items-center gap-x-2 justify-center rounded-xl bg-primary-500 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-primary-600 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-600 cursor-pointer">
        <i class="fa-solid fa-plus"></i> Create Form
      </button>
    </div>
  <% end %>
<% end %>
