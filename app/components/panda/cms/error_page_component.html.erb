<div class="flex flex-col items-center justify-center min-h-screen px-4 py-12 bg-white">
  <div class="max-w-md w-full text-center">
    <h1 class="text-6xl font-bold text-gray-900"><%= @error_code %></h1>
    <p class="mt-4 text-xl font-semibold text-gray-900"><%= @message %></p>
    <% if @description.present? %>
      <p class="mt-2 text-base text-gray-600"><%= @description %></p>
    <% end %>
    <div class="mt-6">
      <a href="<%= @homepage_link %>" class="inline-block px-6 py-3 bg-primary-600 text-white font-semibold rounded-md hover:bg-primary-700 transition-colors">
        Return to homepage
      </a>
    </div>
  </div>
</div>
