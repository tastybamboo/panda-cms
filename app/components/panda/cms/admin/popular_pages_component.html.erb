<%= render Panda::Core::Admin::PanelComponent.new do |panel| %>
  <% panel.heading(text: "Popular Pages (#{period_name})", level: :panel) %>

  <% panel.body do %>
    <% if popular_pages.any? %>
      <div class="overflow-y-auto max-h-96">
        <table class="min-w-full divide-y divide-gray-300">
          <thead class="sticky top-0 bg-white z-10">
            <tr>
              <th class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0">Page</th>
              <th class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Path</th>
              <th class="px-3 py-3.5 text-right text-sm font-semibold text-gray-900">Views</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% popular_pages.each_with_index do |page_data, index| %>
              <tr class="<%= index.even? ? 'bg-indigo-50' : 'bg-white' %>">
                <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0">
                  <%= helpers.link_to page_data.title, helpers.admin_cms_page_path(page_data.id), class: "text-indigo-600 hover:text-indigo-900" %>
                </td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                  <%= helpers.link_to page_data.path, page_data.path, class: "text-gray-600 hover:text-gray-900", target: "_blank" %>
                </td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500 text-right font-semibold">
                  <%= page_data.visit_count %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-sm text-gray-500">No page visits recorded yet.</p>
    <% end %>
  <% end %>
<% end %>
